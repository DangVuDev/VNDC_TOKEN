  "description": "VNDC - Blockchain Token System for Higher Education DApp",
  "main": "hardhat.config.js",
  "scripts": {
    "compile": "hardhat compile",
    "deploy:mumbai": "hardhat run scripts/deploy.js --network mumbai",
    "deploy:polygon": "hardhat run scripts/deploy.js --network polygon",
    "test": "hardhat test",
    "test:gas": "REPORT_GAS=true hardhat test",
    "coverage": "hardhat coverage",
    "verify:mumbai": "hardhat verify --network mumbai",
    "verify:polygon": "hardhat verify --network polygon",
    "hardhat": "hardhat",
    "clean": "hardhat clean",
    "node": "hardhat node",
    "accounts": "hardhat accounts",
    "flatten": "hardhat flatten",
    "typechain": "typechain --target ethers-v6 --out-dir typechain-types './**/*.sol'"
  },
  "keywords": [
    "blockchain",
    "ethereum",
    "polygon",
    "nft",
    "credentials",
    "education",
    "governance",
    "defi"
